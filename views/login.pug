doctype html 
html 
    head 
        title Tourflix - #{title}
        include _head
    
    body 
        //HEADER
        include _header

        //CONTENT
        main(class='main')
            if !user
                div(class='form__container')
                    form(action='' method='' class='form-box' id='login-form')
                        h2(class='heading-secondary u-font-medium') Log into your account
                        div(class='form-group')
                            label(for='' class='form-box--label') Email
                            input(type='email' placeholder='abc@example.com' class='form-box--input' id='email-inp' required)
                        
                        div(class='form-group')
                            label(for='' class='form-box--label') Password
                            input(type='password' placeholder='Password' class='form-box--input' id='password-inp' required minlength='8')
                        
                        div(class='form-group u-margin-top-small')
                            input(type='submit' value='Login' class='form-box--btn')

                        div(class='form-group')
                            a(href='/forgotpassword' style='text-transform: capitalize;color: #66a6ff;') forgot password ?
            else 
                h2(class='heading-secondary') You are Already Logged In    

        //FOOTER
        include _footer

        //SCRIPT
        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js')
        script(src='./js/alert.js')
        script(src='./js/logInOut.js')